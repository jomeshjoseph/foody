<script>



  function deliveryStatusUpdate(value, orderId) {

    $.ajax({
      url: '/admin/order-status',
      data: {
        order: orderId,
        valueChange: value
      },
      method: 'POST',
      success: function (response) {
        Swal.fire(
          'Good job!',
          'Order status Changed!',
          'success'
        ).then(function () {
          location.reload();
        });
      }
    });


  }

</script>
