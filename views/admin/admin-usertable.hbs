            <!-- Table Start -->
       <div class="content">
 <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-10">
                        <div class="bg-secondary rounded h-100 p-4">
                            <h6 class="mb-4">User List</h6>
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th scope="col">#</th>
                                        <th scope="col">First Name</th>
                                           <th scope="col">Last Name</th>
                                         <th scope="col">Email</th>
                                        <th scope="col">Phone</th>
                                        <th scope="col">status</th>
                                        <th scope="col">action</th>
                                        
                                    </tr>
                                </thead>
                                <tbody>
                                    {{#each allusers}}
                                    <tr>
                                        <th scope="row">{{@index}}</th>
                                        <td>{{this.firstname}}</td>
                                        <td>{{this.lastname}}</td>
                                        <td>{{this.email}}</td>
                                        <td>{{this.phone}}</td>
                                        <td>{{#if isBlocked}}
                                                    <span class="badge bg-danger"><i
                                                            class="bi bi-exclamation-octagon me-1"></i> Blocked</span>
                                                    {{else}}
                                                    <span class="badge bg-success"><i
                                                            class="bi bi-check-circle me-1"></i> Active</span>
                                                    {{/if}}
                                                </td>

                                         <td>{{#if isBlocked}}
                                                    <a href="/admin/unBlockUser?id={{this._id}}" class="badge bg-success"><i
                                                            class="bi bi-check-circle me-1" onclick="return confirm ('are you sure that you want to unblock {{this.name}}')"></i> Unblock</a>
                                                    {{else}}
                                                    <a href="/admin/blockUser?id={{this._id}}" class="badge bg-danger"><i
                                                            class="bi bi-exclamation-octagon me-1" onclick="return confirm ('are you sure that you want to block {{this.name}}')" ></i> Block</a>
                                                    {{/if}}
                                                </td>

                                    </tr>
                                   {{/each}}
                                </tbody>
                            </table>
                        </div>
                    </div>
                   
                </div>
            </div>

       </div>
           
            <!-- Table End -->