                            <div class="col-sm">
                                <label for="colFormLabel" class="col-sm-2 col-form-label text-dark">Category</label>
                            </div>
                            <form id="addCategoryForm">
                                <div class="col-sm-7">
                                    <input type="text " class="form-control bg-white" id="categoryname" placeholder="Add Category Name"
