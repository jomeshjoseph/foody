            <!-- Table Start -->
       <div class="content">
 <div class="container-fluid pt-4 px-4">
                <div class="row g-4">
                    <div class="col-sm-12 col-xl-10">
                        <div class="bg-white rounded h-100 p-4">
                            <h6 class="mb-4">User List</h6>
                             <table class="table table-bordered text-dark" id="orderTable">
                <thead>

                  <tr>
                    <th scope="col">sl.no</th>
                    <th scope="col">Name</th>
                    <th scope="col">Date</th>
                    <th scope="col">Status</th>
                    <th scope="col">Price</th>
                    <th scope="col">Method</th>
                    <th scope="col">Status</th>
                    <th scope="col">View</th>
                  </tr>

                </thead>

                <tbody>
                  

                  {{#each allorders}}
                    
                  
                  <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.deliverydetails.firstname}}</td>
                    <td>{{this.date}}</td>
                    <td>{{this.status}}</td>
                    <td>â‚¹{{this.totalAmount}}</td>
                    <td>{{this.paymentmethod}}</td>
                    <td>


                      <select onchange="deliveryStatusUpdate(value,'{{this._id}}' , {{this.userid}})"
                        name="form-control item" >


                        <option hidden value="{{this.status}}" selected>
                          {{this.status}}
                        </option>


                        {{#isEqual this.status 'placed'}}
                        <option value="Shipped">Shipped</option>
                        <option value="Delivered">Delivered</option>
                        <option value="Cancelled">Cancelled</option>
                        {{/isEqual}} 

                        {{#isEqual this.status 'Shipped'}}
                        <option value="Delivered">Delivered</option>
                        <option value="Cancelled">Cancelled</option>
                        {{/isEqual}}

                        {{#isEqual this.status 'Delivered'}}
                       <h5>Delivered</h5>
                        {{/isEqual}}

                      </select>


                    </td>
                    <td>
                      <a href="/admin/orderproduct/{{this._id}}">order details</a>
                    </td>
                  </tr>
                 
                  {{/each}}
                </tbody>

              </table>
                        </div>
                    </div>
                   
                </div>
            </div>

       </div>
           
           

  <script>



    function deliveryStatusUpdate(value, orderId) {

      $.ajax({
        url: '/admin/order-status',
        data: {
          order: orderId,
          valueChange: value
        },
        method: 'POST',
        success: function (response) {
         Swal.fire(
  'Good job!',
  'Order status Changed!',
  'success'
).then(function () {
            location.reload();
          });
        }
      });


    }

</script>


